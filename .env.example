# KAI Shop Assistant - Environment Variables Template
# Copy this to .env.local and fill in your values

# ===========================================
# REQUIRED: AI Services
# ===========================================
GOOGLE_API_KEY=your_gemini_api_key_here

# ===========================================
# REQUIRED: Supabase Database
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ===========================================
# OPTIONAL: Voice Services
# ===========================================
DEEPGRAM_API_KEY=your_deepgram_key_here
ELEVENLABS_API_KEY=your_elevenlabs_key_here

# ===========================================
# UPI Payment Configuration
# ===========================================
UPI_ID=your_upi_id@bank
SHOP_NAME=Your Shop Name

# ===========================================
# Rate Limiting (defaults work fine)
# ===========================================
DEEPGRAM_REQUESTS_PER_MINUTE=60
GEMINI_REQUESTS_PER_MINUTE=30

# ===========================================
# Admin Dashboard
# ===========================================
ADMIN_PASSWORD=change_this_password

# ===========================================
# API URL (leave empty for Netlify functions)
# ===========================================
NEXT_PUBLIC_API_URL=
